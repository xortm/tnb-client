<div class="busi-info ">
    {{#bs-form formLayout=formLayout model=medicineShemeModel action=(action "detailSaveClick") invalid=(action "invalid")}}
        <div class="sign col-sm-12  nopadding-horizontal top8 bottom12">
            <div class="pull-right user-add-btn nopadding-left">
                {{#if addMode}}
                {{else}}
                    {{#if detailModify}}
                    {{else}}
                        {{#ui/form-function editAction="detailModifyClick" detailModifyClick="detailModifyClick" removeAction="delById" delById="delById" }}
                        {{/ui/form-function}}
                    {{/if}}
                {{/if}}
            </div>
        </div>
        <div style="clear:both" />
        <div class="line">
            <div class="col-xs-12 col-sm-6 nopadding-left ">
                <div class="form-input-group label-normal">
                    <span class="input-group-addon nopadding-top">选择中医方案：</span>
                    {{#if detailModify}}
                        {{#bs-form-element class="inline-block form-input-group" controlType="scheme" property="scheme" }}
                            {{#power-select class="inline-block input-group-content" placeholder="必填项" options=medicineList selected=medicineShemeModel.scheme searchField="namePinyin" noMatchesMessage="没有相关内容" allowClear=false onchange=(action "selectmedicine" ) as |medicine|}}
                                {{medicine.title}}
                            {{/power-select}}
                        {{/bs-form-element}}
                    {{else}}
                        <div class="font-light input-group-content">{{medicineShemeModel.scheme.title}}</div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="text-center padding-top30 padding-bottom100">
                <p class="text-center user-add-btn" style="display:inline-block;margin:0 auto!important ">
                    {{#if detailModify}}
                        {{#ui/mix-button class=" user-btn edit-btn " iconClass="fa-check" text='保存' }}
                        {{/ui/mix-button}}
                        {{#ui/mix-button class=" user-btn times-btn " iconClass="fa fa-mail-reply" text='取消' clickAction="cancelClick" cancelClick="cancelClick" }}
                        {{/ui/mix-button}}
                    {{else}}
                    {{/if}}
                </p>
            </div>
        </div>
    {{/bs-form}}
</div>

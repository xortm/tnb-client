{{#if customer.initial}}
{{log "routeId in hbs" routeId}}
  <li id="{{routeId}}-{{customer.initial}}" style="padding-left:13px;width:100%;height:20px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;font-size:13px;line-height:20px;color:#8C8C8C;background-color:#EBEBEB;text-align:left;margin-top:-1px;">
    {{customer.initial}}
  </li>
{{/if}}
<li class="{{routeId}}-item{{customer.id}}" style="width:100%;height:54px;padding:0px 20px 0px 10px;" {{action "choiceCustomer" customer.id customer.leaveStatus on="tap"}}>
  <div style="width:100%;height:54px;border-bottom:1px solid #E1E1E1;white-space:nowrap; overflow:hidden;text-overflow:ellipsis;">
    <div class="pull-left" style="margin:8px 8px 8px 0;">
      {{ui/img-intergration name="headImg" hasUploader=false
      imgSrc=customer.avatarUrl height=38 width=38 }}
    </div>
    {{#if (eq isSquare 12)}}
      <span class="font14 pull-left padding-left-10" style="color:#353535;line-height:54px; margin-right:6px; text-align:left;">{{customer.name}}</span>
    {{else}}
      <span class="font14 pull-left" style="color:#353535;line-height:54px; margin-right:6px; text-align:left;">{{customer.name}}</span>
      <span class="font12 pull-left" style="color:#353535;line-height:54px; text-align:left;">{{customer.bed.allBedName}}</span>
    {{/if}}
    {{#if (eq isSquare 7)}}
      {{#if customer.leaveStatus}}
        <div class="pull-right" style="margin:16px 0px 16px 0;">
          {{ui/img-intergration name="jiaImg" hasUploader=false
          imgSrc=jiaSrc height=22 width=22 }}
        </div>
      {{/if}}
    {{/if}}
    {{#if (eq isSquare 9)}}
      {{#if customer.leaveStatus}}
        <div class="pull-right" style="margin:16px 0px 16px 0;">
          {{ui/img-intergration name="jiaImg" hasUploader=false
          imgSrc=jiaSrc height=22 width=22 }}
        </div>
      {{/if}}
    {{/if}}
  </div>
</li>

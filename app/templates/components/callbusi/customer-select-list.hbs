<li id="{{if customer.initial customer.initial ""}}" class="item{{customer.id}}" style="width:100%;height:54px;border-bottom:1px solid #cccccc;white-space:nowrap; overflow:hidden;text-overflow:ellipsis;" {{action "choiceCustomer" customer.id customer.leaveStatus on="tap"}}>
  <div class="pull-left" style="margin:8px 8px 8px 0;">
    {{ui/img-intergration name="headImg" hasUploader=false
    imgSrc=customer.avatarUrl height=38 width=38 }}
  </div>
  {{#if (eq isSquare 12)}}
    <span class="font14 pull-left padding-left-10" style="color:#ffffff;line-height:54px; margin-right:6px; text-align:left;">{{customer.name}}</span>
  {{else}}
    <span class="font14 pull-left" style="color:#ffffff;line-height:54px; margin-right:6px; text-align:left;">{{customer.name}}</span>
    <span class="font12 pull-left" style="color:#ffffff;line-height:54px; text-align:left;">{{customer.bed.allBedName}}</span>
  {{/if}}
  {{#if (eq isSquare 7)}}
    {{#if customer.leaveStatus}}
      <div class="pull-right" style="margin:16px 0px 16px 0;">
        {{ui/img-intergration name="jiaImg" hasUploader=false
        imgSrc=jiaSrc height=22 width=22 }}
      </div>
    {{/if}}
  {{/if}}
</li>


<div class="col-sm-12">
	<div class="box margin-middle max-width">
		<!-- BOX-BODY -->
		<div class="box-body">
				{{#bs-form formLayout=formLayout model=customerbusinessflowModel invalid=(action "invalid")}}
			<div class="row">
				<div class="col-xs-12">
					<p class="user-add-btn">
						{{#if detailEdit}}
						{{else}}
							{{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='返回'  clickAction="detailCancel" detailCancel="detailCancel"}}
			        {{/ui/mix-button}}
						{{/if}}
					</p>
				</div>
				<!-- 列表详细介绍 -->
				<div class="col-xs-12 nopadding-left">
					<div class="col-xs-12 nopadding-horizontal mt20">

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">预定人姓名：</span>
								{{#if detailEdit}}
									{{bs-form-element property="advName" class="inline-block form-input-group label-normal" controlType="advName" placeholder='预定人姓名(必填)'}}
								{{else}}
									<div class="input-group-content">{{customerbusinessflowInfo.advName}}</div>
								{{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">预定人电话：</span>
								{{#if detailEdit}}
										{{bs-form-element property="advTel" class="inline-block form-input-group label-normal" controlType="advTel" placeholder='预定人电话(必填)'}}
								{{else}}
									<div class="input-group-content">{{customerbusinessflowInfo.advTel}}</div>
								{{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">老人姓名：</span>
								{{#if detailEdit}}
										{{bs-form-element property="cusName" class="inline-block form-input-group label-normal" controlType="cusName" placeholder='老人姓名(必填)'}}
								{{else}}
									<div class="input-group-content">{{customerbusinessflowInfo.customer.name}}</div>
								{{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">老人性别：</span><!--字典-->
								{{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="cusSex" property="cusSex" }}
										{{callbusi/dict-selector curDict=customerbusinessflowModel.cusSex dictChange=customerbusinessflowModel.sexChange groupCode=constants.sexType showName="必填" dictSelect="sexSelect" value=customerbusinessflowModel.cusSex preselected=false}}
									{{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{customerbusinessflowInfo.customer.sex.typename}}</div>
								{{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">身份证号：</span>
	              {{#if detailEdit}}
	                {{bs-form-element property="cusCardCode" class="inline-block form-input-group label-normal"
									controlType="cusCardCode" placeholder='身份证号(必填)' focus-out='computedCardCode' computedCardCode='computedCardCode'}}
	              {{else}}
									<div class="input-group-content">{{customerbusinessflowInfo.customer.cardCode}}</div>
	              {{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-6">
                <div class="form-input-group label-normal">
                    <span class="input-group-addon">出生日期：</span>
                    {{#if detailEdit}}
                        <div class="inline-block form-input-group">
                            {{ui/addon/bs-datetimepicker date=customerbusinessflowModel.birthdayTime placeholder=""
                            locale="zh-CN" iconClasses="fa fa-calendar" format='YYYY-MM-DD'
                            show="dpShowAction" change="changeBirthdayAction" }}
                        </div>
                    {{else}}
                        <div class="font-light input-group-content">{{customerbusinessflowInfo.customer.birthdayString}}</div>
                    {{/if}}
                </div>
            </div>

						<div class="col-xs-12 col-sm-6">
                <div class="form-input-group label-normal">
                    <span class="input-group-addon">年龄(岁)：</span>
											{{#if detailEdit}}
												<div class="font-light input-group-content" style="text-indent:11px;">{{customerbusinessflowModel.age}}</div>
											{{else}}
                        <div class="font-light input-group-content" style="text-indent:16px;">{{customerbusinessflowInfo.customer.age}}</div>
											{{/if}}
                </div>
            </div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">老人籍贯：</span><!--字典-->
	                {{#if detailEdit}}
										{{#bs-form-element class="inline-block form-input-group" controlType="cusNative" property="cusNative" }}
											{{callbusi/dict-selector curDict=customerbusinessflowModel.cusNative groupCode=constants.nativePlace showName="必填" dictSelect="nativeSelect" value=customerbusinessflowModel.cusNative preselected=false}}
										{{/bs-form-element}}
	                {{else}}
	                  <div class="input-group-content">{{customerbusinessflowInfo.customer.customerNative.typename}}</div>
	                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">自理能力：</span><!--字典-->
	                {{#if detailEdit}}
										{{#bs-form-element class="inline-block form-input-group" controlType="cusCare" property="cusCare" }}
											{{callbusi/dict-selector curDict=customerbusinessflowModel.cusCare groupCode=constants.selfCareLevel showName="必填" dictSelect="abilitySelect" value=customerbusinessflowModel.cusCare preselected=false}}
										{{/bs-form-element}}
	                {{else}}
	                  <div class="input-group-content">{{customerbusinessflowInfo.customer.selfCareAbility.typename}}</div>
	                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">文化程度：</span><!--字典-->
	                {{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="cusEdu" property="cusEdu" }}
										{{callbusi/dict-selector curDict=customerbusinessflowModel.cusEdu groupCode=constants.educationLevel showName="必填" dictSelect="educationSelect" value=customerbusinessflowModel.cusEdu preselected=false}}
									{{/bs-form-element}}
	                {{else}}
	                  <div class="input-group-content">{{customerbusinessflowInfo.customer.educationLevel.typename}}</div>
	                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">入院日期：</span>
                {{#if detailEdit}}
								{{#bs-form-element class="inline-block form-input-group" controlType="orderInTime" property="orderInTime" }}
								  {{ui/addon/bs-datetimepicker date=customerbusinessflowInfo.orderTime placeholder="入院日期(必填)"
									locale="zh-CN" iconClasses="fa fa-calendar" format='YYYY-MM-DD'
									value=customerbusinessflowInfo.orderInTime show="dpShowAction" change="changeOrderInTimeAction" }}
									{{/bs-form-element}}
                {{else}}
                  <div class="input-group-content">{{customerbusinessflowInfo.orderTimeString}}</div>
                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">预定床位：</span>
                {{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="orderBed"  property="orderBed" }}
										{{callbusi/bed-choose class="inline-block form-input-group" bedShow=bedShow
										submmit="submmit" selectBed="selectBed" selectBuild="selectBuild" bedList=bedList defaultBed=defaultBed}}
									{{/bs-form-element}}
                {{else}}
                  <div class="input-group-content">{{customerbusinessflowInfo.bed.room.floor.building.name}}{{customerbusinessflowInfo.bed.room.floor.name}}:{{customerbusinessflowInfo.bed.room.name}}-{{customerbusinessflowInfo.bed.name}}</div>
                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">经办人：</span>
                {{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="orderStaff"  property="orderStaff" }}
										{{#power-select class="input-group-content" placeholder='经办人姓名(必填)' options=staffList  selected=defaultStaff searchField="namePinyin"
										noMatchesMessage="没有相关内容"	allowClear=false	onchange=(action "selectStaff" ) as |staff|}}
											{{staff.name}}
										{{/power-select}}
									{{/bs-form-element}}
                {{else}}
                  <div class="input-group-content">{{customerbusinessflowInfo.orderStaff.name}}</div>
                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">保证金(元)：</span>
                {{#if detailEdit}}
                    {{bs-form-element property="orderMoney" class="inline-block form-input-group label-normal" controlType="orderMoney" placeholder='保证金(必填)'}}
                {{else}}
                  <div class="input-group-content">{{customerbusinessflowInfo.orderMoney}}</div>
                {{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">预定办理日期：</span>
                {{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="orderDate"  property="orderDate" }}
										{{ui/addon/bs-datetimepicker date=customerbusinessflowInfo.orderDateTime placeholder="预定办理日期(必填)" maxDate=today
										locale="zh-CN" iconClasses="fa fa-calendar" format='YYYY-MM-DD' value=customerbusinessflowInfo.orderDate show="dpShowAction"
										 change="changeOrderDateAction" }}
									 {{/bs-form-element}}
                {{else}}
                  <div class="input-group-content">{{customerbusinessflowInfo.orderDateTimeString}}</div>
                {{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-12">
							<div class="form-input-group">
								<span class="input-group-addon">备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注：</span>
								{{#if detailEdit}}
									{{textarea type="text" class="full-width inline-block form-input-group label-normal form-control" value=customerbusinessflowInfo.orderRemark placeholder='备注'}}
								{{else}}
									<div class="input-group-content">{{customerbusinessflowInfo.orderRemark}}</div>
								{{/if}}
							</div>
						</div>

					</div>
					<div class="col-sm-12">
						<div class="text-center padding-top30">
								<p class="text-center user-add-btn" style="display:inline-block;margin:0 auto!important ">
								{{#if detailEdit}}
								{{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-check"  text='保存' clickAction="detailSaveClick" detailSaveClick="detailSaveClick" clickActParams=customerbusinessflowInfo}}
								{{/ui/mix-button}}
								{{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-mail-reply"  text='取消'  clickAction="detailCancel" detailCancel="detailCancel" }}
				        {{/ui/mix-button}}
								{{else}}
								{{/if}}
								</p>
						</div>
					</div>
				</div>
				<!-- 列表详细介绍 -->
			</div>
{{/bs-form}}

		</div>
		<!-- /BOX-BODY -->
	</div>
</div>


{{#if showpopInvitePassModal}}
	{{#bs-modal body=false footer=false header=false}}
		{{#bs-modal-header}}
			<h3 class="modal-title">删除提示</h3>
		{{/bs-modal-header}}
		{{#bs-modal-body}}
			<h4 class="modal-title">是否删除该条记录？</h4>
		{{/bs-modal-body}}

		{{#bs-modal-footer as |footer|}}
			{{#bs-button action=(action "cancelPassSubmit" customerbusinessflowInfo) type="primary" disabled=prepaidDisabled}}确定{{/bs-button}}
			{{#bs-button action=(action "invitation") type="default"}}取消{{/bs-button}}
		{{/bs-modal-footer}}
	{{/bs-modal}}
{{/if}}

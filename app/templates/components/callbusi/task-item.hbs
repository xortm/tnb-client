<div class="panel panel-default width100 marginbottom1">
<div class="row">
<!--图片部分-->
  <div class="col-sm-2">
    <div class="movS">
    <!-- {{ui/img-wrap url=taskIcon width=100 height=100}}
   -->
     {{ui/img-intergration name="iconFile"
     hasUploader=false
     imgSrc=task.avatarUrl width=110 height=110
     uploadUrl=uploadUrl
     businessType=constants.uploadBusinessType_iconFile
     }}
    </div>
  </div>
<!--详情信息部分-->
<div class="col-sm-10">
  <div class="row">
    <div class="panel-heading padding-bottom5">
      <div class="col-sm-7 panel-title weight-bold">{{task.title}}&nbsp;&nbsp;<img src={{imgSrc}} width={{imgWidth}} title={{imgTitle}}/></div>
      <div class="col-sm-5 pull-right font13 text-align-right">工作时段:{{task.worktimeString}}
        <!-- {{#each task.taskTypes as |taskType|}}
          <span class="font13">{{taskType.typename}}</span>
        {{/each}} -->
        </div>
      </div>
    </div>
    <!--详情信息部分-->
    <div class="col-sm-8 row-padding">
      <div class="row row2">
        <div class="fontBigger task-item-color">{{task.pubuser.entName}}</div>
      </div>
      <div class="row  fontBigger">
          <div class="col-sm-4 pull-left task-item-color nopadding-horizontal">外呼报酬：<span class="item-gray-color">￥{{task.calloutPay}}/次</span></div>
          <div class="col-sm-4 pull-left task-item-color">成单佣金：<span class="item-gray-color">￥{{task.poPay}}/单</span></div>
          <div class="col-sm-4 pull-left task-item-color">需要客服：{{task.extendIfo.csNeed}} 名</div>
      </div>
      <div class="row fontBigger">
          <div class="col-sm-4 pull-left task-item-color nopadding-horizontal">接听报酬：<span class="item-gray-color">￥{{task.callinPay}}/次</span></div>
          <div class="col-sm-4 pull-left task-item-color">在线报酬：<span class="item-gray-color">￥{{task.onlinePay}}/时</span></div>
          <div class="col-sm-4 pull-left task-item-color">剩余名额：{{task.extendIfo.csRemain}} 名</div>
      </div>
      <div class="row fontBigger">
        <div class="nopadding-horizontal pull-left col-sm-8  task-item-color">任务日期：<span class="item-gray-color">{{task.beginDateComp}} ~ {{task.endDateComp}}</span></div>
        <div class="pull-left task-item-color col-sm-4">结账方式：{{task.settleAccountWayString}}</div>
        <!-- <div class="pull-left task-item-color col-sm-8">语种要求：<span class="item-gray-color">{{taskLanguage}}</span></div> -->
      </div>
      <div class="row fontBigger">
        <div class="nopadding-horizontal pull-left col-sm-6 task-item-color line-height-label">
          {{task.desc}}
        </div>
      </div>
      <div  class="row fontBigger line-height-label">
        <span class="bgcolor-m padding-hor7 labletype">性别{{task.sexPreferenceStr}}</span>
        {{#if taskLanguage}}<span class="bgcolor-m padding-hor7 labletype margin-right5">{{taskLanguage}}</span>{{/if}}
        {{#each task.taskTypes as |taskType|}}
          <span class="bgcolor-m padding-hor7 labletype inlineBlock padding-ver0">{{taskType.typename}}</span>
        {{/each}}
      </div>
    </div>
    <div class="col-sm-4 row-padding padding-top18">
      <div class="row top8 right4">
        <div class="apply-type text-align-right">
          {{#if (eq source '1')}}
          {{#if showFunc}}
          {{log 'item-nodetail get in taskitem  in show func'}}
          <div class="row applyta">
            {{#ui/mix-button iconClass="fa-paper-plane"
            text="申请任务"
            clickAction="popFollow" applyTask="applyTask" popFollow="popFollow" clickActParams=testParams}}
            {{/ui/mix-button}}
          </div>
          {{/if}}

          <!-- {{#if showApplyTip}}
          <div class="row top8 right4">
            <div class="pull-right doOrNot">已申请</div>
          </div>
          {{/if}} -->

        <!-- 当是task-mine，显示同意邀请 -->
            {{#if (eq task.CRL_showStatus 5)}}
            {{log 'item-nodetail get in taskitem 2' task.CRL_showStatus}}
            企业邀请
            {{/if}}
          {{else}}
            {{#if (eq task.CRL_showStatus 5)}}
              <!-- <button class="btn btn-success border-radius-sm" {{action 'agreeApplyed' task}}>同意</button> -->
              <!-- <button class="btn btn-success border-radius-sm" {{action 'refuseApplyed' task}}>拒绝</button> -->
              {{#ui/common-button
              clickAction="agreeApplyed" agreeApplyed="agreeApplyed" text="同意" disabled=false clickActParams=task}}
              {{/ui/common-button}}
            <span class="pull-right">&nbsp;&nbsp;</span>
              {{#ui/common-button
              clickAction="refuseApplyed" refuseApplyed="refuseApplyed" text="拒绝" disabled=false clickActParams=task}}
              {{/ui/common-button}}

            {{/if}}
          {{/if}}
          {{#if (eq task.CRL_showStatus 2)}}已申请{{/if}}
          {{#if (eq task.CRL_showStatus 3)}}已通过{{/if}}
          {{#if (eq task.CRL_showStatus 4)}}企业审核未通过{{/if}}
          {{#if (eq task.CRL_showStatus 6)}}已通过（未分配坐席）{{/if}}
          {{#if (eq task.CRL_showStatus 7)}}已拒绝邀请{{/if}}
          {{#if (eq task.CRL_showStatus 8)}}人数已满{{/if}}
        </div></div>
      <div class="row">
        <div class="pull-right nopadding-horizontal margin-right15 apply-type">
        {{statusShow}}
        </div>
      </div>
    </div>
</div>
</div>
</div>
<div class="top8 bottom8" >
  <center>
  <div style="width:15%;display:inline-block !important;">
    <div class="item-payshow">
      <span class="pull-left">外呼</span><br/>
      <div style="text-align:right">
        <span style="font-size:50px;">{{task.calloutPay}}</span>元/次
      </div>
    </div>
  </div>
  <div class="plusType">+</div>
  <div style="width:15%;display:inline-block !important;">
    <div class="item-payshow">
      <span class="pull-left">成单</span><br/>
      <div style="text-align:right">
        <span style="font-size:50px;">{{task.poPay}}</span>元/次
      </div>
    </div>
  </div>
  {{#if task.callinPay}}
  <div class="plusType">+</div>
  <div style="width:15%;display:inline-block !important;">
    <div class="item-payshow">
      <span class="pull-left">接听</span><br/>
      <div style="text-align:right">
        <span style="font-size:50px;">{{task.callinPay}}</span>元/次
      </div>
    </div>
  </div>
  {{/if}}
  {{#if task.callinPay}}
  <div class="plusType">+</div>
  <div style="width:15%;display:inline-block !important;">
    <div class="item-payshow">
      <span class="pull-left">在线</span><br/>
      <div style="text-align:right">
        <span style="font-size:50px;">{{task.onlinePay}}</span>元/次
      </div>
    </div>
  </div>
  {{/if}}
  {{log 'callbill get in hbs' callBill}}
  <div class="plusType">-</div>
  <div style="width:15%;display:inline-block !important;">
    <div class="item-payshow">
      <span class="pull-left">话费</span><br/>
      <div style="text-align:right">
        <span style="font-size:50px;">{{callBill}}</span>元/次
      </div>
    </div>
  </div>
</center>
</div>

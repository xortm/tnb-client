          {{#if (eq task.CRL_showStatus 4)}}企业审核未通过{{/if}}
          {{#if (eq task.CRL_showStatus 7)}}已拒绝邀请{{/if}}
          {{#if (eq task.CRL_showStatus 8)}}人数已满{{/if}}
      </span></div>
    </div>
    {{/unless}}
    <div class="line">
      <div><span>任务呼叫类型:</span><span>{{task.calltypeStr}}</span></div>
    </div>
    <div class="line">
      <div><span>任务时间类型:</span><span>{{task.durtypeStr}}</span></div>
    </div>
    <!-- <div class="line">
      <div><span>外呼电话量:</span><span>{{task.extendIfo.calloutNum}}</span></div>
    </div> -->
  </div>

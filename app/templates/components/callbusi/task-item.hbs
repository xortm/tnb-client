    <div class="line">
      企业：{{task.pubuser.entName}}
    </div>
    <div class="line">
      性别要求：{{task.sexPreferenceStr}}
    </div>
    <div class="line">
      语种要求：{{taskLanguage}}
    </div>
    <div class="line">
      需要人数：{{task.extendIfo.csNeed}}人（{{task.extendIfo.csHave}}人已领）
      {{log '======-----=-=-=-=-=-=-=-=-=-==-=-==-=-' task.extendIfo}}

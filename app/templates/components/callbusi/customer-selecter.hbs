<!-- 头部信息 -->
<div class="nhead">
  <!-- 头像及信息 -->
  {{#if isExpandMode}}
    {{#if queryCustomer}}
      {{ui/img-intergration name="headImg" hasUploader=false
      imgSrc=allSrc height=38 width=38 class="pull-left top2"}}
    {{else}}
      {{#if listSelectedEnd}}
        {{ui/img-intergration name="headImg" hasUploader=false
          imgSrc=listSelectedEnd.avatarUrl height=28 width=28 class="pull-left top4"}}
      {{else}}
        <div class="pull-left" {{action "switchShrink" on="tap"}} style="line-height:35px;color:#fff;padding-right:5px;text-align:center;width:80%;">
          {{#if (eq isSquare 12)}}
            请选择员工
          {{else}}
            请选择老人
          {{/if}}
        </div>
      {{/if}}
    {{/if}}
  {{else}}
    {{#if queryCustomer}}
      {{ui/img-intergration name="headImg" hasUploader=false
      imgSrc=allSrc height=38 width=38 class="pull-left top2"}}
    {{else}}
      {{#if listSelectedEnd}}
        {{ui/img-intergration name="headImg" hasUploader=false
          imgSrc=listSelectedEnd.avatarUrl height=28 width=28 class="pull-left top4"}}
      {{else}}
        <div class="pull-left" {{action "switchExpand" on="tap"}} style="line-height:35px;color:#fff;padding-right:5px;text-align:center;width:80%;">
          {{#if (eq isSquare 12)}}
            请选择员工
          {{else}}
            请选择老人
          {{/if}}
        </div>
      {{/if}}
    {{/if}}
  {{/if}}
  <!-- 展开收起按钮 -->
  {{#if isExpandMode}}
    {{#if queryCustomer}}
      <div class="pull-left" {{action "switchShrink" on="tap"}} style="line-height:44px;color:#fff;padding-left:30px;text-align:left;width:50%;">
        {{#if (eq isSquare 12)}}
          全部员工
        {{else}}
          全部老人
        {{/if}}
      </div>
    {{else}}
      <div class="pull-left left4" {{action "switchShrink" on="tap"}} style="width:185px;">
        {{#if (eq isSquare 12)}}
          <div class="font-big text-left color-white top2 padding-left-10">{{listSelectedEnd.name}}</div>
          <div class="font-small text-left color-white width100B extend padding-left-10">{{listSelectedEnd.position.typename}}</div>
        {{else}}
          <div class="font-big text-left color-white top2">{{listSelectedEnd.name}}</div>
          <div class="font-small text-left color-white width100B extend">{{listSelectedEnd.bed.allBedName}}</div>
        {{/if}}
      </div>
    {{/if}}
    {{#ui/icon-button iconClass="fa-angle-up font-large color-white top8 customer-picker-icon"
        clickAction="switchShrink" switchShrink="switchShrink" }}
    {{/ui/icon-button}}
  {{else}}
    {{#if queryCustomer}}
      <div class="pull-left" {{action "switchExpand" on="tap"}} style="line-height:44px;color:#fff;padding-left:30px;text-align:left;width:50%;">
        {{#if (eq isSquare 12)}}
          全部员工
        {{else}}
          全部老人
        {{/if}}
      </div>
    {{else}}
    <div class="pull-left left4" {{action "switchExpand" on="tap"}} style="width:185px;">
      {{#if (eq isSquare 12)}}
        <div class="font-big text-left color-white top2 padding-left-10">{{listSelectedEnd.name}}</div>
        <div class="font-small text-left color-white width100B extend padding-left-10">{{listSelectedEnd.position.typename}}</div>
      {{else}}
        <div class="font-big text-left color-white top2">{{listSelectedEnd.name}}</div>
        <div class="font-small text-left color-white width100B extend">{{listSelectedEnd.bed.allBedName}}</div>
      {{/if}}
    </div>
    {{/if}}
    {{#ui/icon-button iconClass="fa-angle-down font-large color-white top8 customer-picker-icon"
        clickAction="switchExpand" switchExpand="switchExpand" }}
    {{/ui/icon-button}}
  {{/if}}

</div>
<!-- 扩展信息 -->
  {{log "isSquare in hbs:" isSquare}}
  {{callbusi/select-bar isSquare=isSquare isExpandMode=isExpandMode isExpand=isExpand choiceCustomer="choiceCustomer" switchShrink="switchShrink" routeId=routeId}}

<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
      	<div class="row">
          <div class="col-sm-9">
        	  <!--搜索-->
            <div class="col-sm-5 nopadding-left">
        	    <div class="input-group">
            		{{input class="form-control" type="text" placeholder="按等级名称搜索" value=queryCondition enter="search"}}
      	        <span class="input-group-btn">
        		      <button class="btn btn-primary btn-reduce" type="button" style="touch-action: manipulation; -ms-touch-action: manipulation;" {{action "search" on="click"}}>
                    <i class="fa fa-search"></i>
                  </button>
      	        </span>
        	    </div>
        	  </div>
        	  <!--搜索-->
        </div>
          <div class="user-add-btn col-sm-3 nopadding-right">
            {{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='新增护理等级'  clickAction="toDetailPage" toDetailPage="toDetailPage"}}
            {{/ui/mix-button}}
          </div>
      	</div>
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
              <th rowspan="1" colspan="1" width="">等级名称</th>
              <th rowspan="1" colspan="1" width="">价格标准（元/天）</th>
              <th rowspan="1" colspan="1" width="">自理类型</th>
              <th rowspan="1" colspan="1" width="">说明</th>
            </tr>
          </thead>
          {{#if serviceLevelList}}
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#each serviceLevelList as |serviceLevel|}}
            <tr {{action "toDetailPage" serviceLevel on="click"}}>
              <td class="ellipsis">{{serviceLevel.name}}</td>
              <td class="ellipsis">{{serviceLevel.price}}</td>
							<td class="ellipsis">{{serviceLevel.selfCareLevelName}}</td>
              <td class="ellipsis">{{serviceLevel.remark}}</td>
            </tr>
            {{/each}}
          </tbody>
          {{else}}
          <div class="nodate">暂无数据</div>
          {{/if}}
        </table>
        {{#if serviceLevelList }}
            {{page-numbers content=serviceLevelList showFL=true numPagesToShow=5}}
        {{else}}
                <h1 class="col-sm-12 center unTask"></h1>
        {{/if}}
      </div>
    </div>
  </div>
  <!-- /BOX -->

</div>


<div class="col-md-12">
	<div class="box margin-middle max-width">
		<!-- BOX-BODY -->
		<div class="box-body">
			{{#bs-form formLayout=formLayout model=healthModel action=(action "saveHealth") invalid=(action "invalid")}}
				<!-- 列表编辑-->
				<div class="row">
					<div class="col-xs-12">
						<p class="user-add-btn">
							{{#if detailEdit}}
							{{else}}
								{{#ui/form-function editAction="detailEditClick" detailEditClick="detailEditClick" removeAction="delById" delById="delById" }}
								{{/ui/form-function}}
							{{/if}}
						</p>
					</div>
					<div class="col-xs-12 nopadding-horizontal mt20">
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">老人姓名：</span>
								{{#if detailEdit}}
                {{#bs-form-element class="inline-block form-input-group" controlType="examUser"  property="examUser" }}
                {{#power-select class="inline-block input-group-content" placeholder="必填项" options=customerList selected=healthModel.examUser searchField="namePinyin" noMatchesMessage="没有相关内容"
                allowClear=false onchange=(action "selectCustomer" ) as |customer|}}
                {{customer.name}}
                {{/power-select}}
                {{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{health.examUser.name}}</div>
								{{/if}}
							</div>
						</div>

            <div class="col-xs-12 col-sm-6">
              <div class="form-input-group">
                <span class="input-group-addon">体检时间：</span>
                {{#if detailEdit}}
                {{#bs-form-element class="inline-block form-input-group" controlType="examDateTime"  property="examDateTime" }}
                {{ui/addon/bs-datetimepicker date=healthModel.examDate placeholder=""
                  locale="zh-CN" iconClasses="fa fa-calendar" maxDate=today
                   show="dpShowAction" change="changeExamDateTimeAction" }}
                {{/bs-form-element}}
                {{else}}
                  <div class="input-group-content">{{health.examDateString}}</div>
                {{/if}}
              </div>
            </div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">体检项目：</span>
								{{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="itemtype" property="itemtype" }}
										{{callbusi/dict-selector class="" groupCode=constants.healthExamType showName="选择体检项目"
                    curDict=healthModel.itemtype dictSelect="addHealthSelect" value=health.itemtype preselected=false allowClear=false}}
									{{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{health.itemtype.typename}}</div>
								{{/if}}
							</div>
						</div>
              <div class="col-xs-12 col-sm-12">
                  {{#if bloodShow}}
                      <div class="form-input-group">
                          <span class="input-group-addon">高压(mm/Hg)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.result type="text"}}
															{{else}}
															<div class="input-group-content">{{health.result}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">低压(mm/Hg)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtion type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtion}}</div>
															{{/if}}
                          </div>
                      </div>
                  {{else}}
                      {{#if heartShow}}
                          <div class="form-input-group">
                              <span class="input-group-addon">心率(times/min)：</span>
                              <div>
																{{#if detailEdit}}
                                  {{input class="input-group-content" value=health.result type="text"}}
																	{{else}}
																	<div class="input-group-content">{{health.result}}</div>
																	{{/if}}
                              </div>
                          </div>
                      {{else}}
                      {{#if analysisShow}}
                      <div class="form-input-group">
                          <span class="input-group-addon">白细胞：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.result type="text"}}
															{{else}}
															<div class="input-group-content">{{health.result}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">亚硝酸盐：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtion type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtion}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">尿胆原：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionSec type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionSec}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">蛋白质：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionThir type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionThir}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">酸碱度：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionFou type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionFou}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">红细胞：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionFiv type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionFiv}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">比重：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionSix type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionSix}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">酮体：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionSev type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionSev}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">胆红素：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionEig type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionEig}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">尿葡萄糖：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionNin type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionNin}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">维生素：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionTen type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionTen}}</div>
															{{/if}}
                          </div>
                      </div>
                      {{else}}
                      {{#if OxygenShow}}
                      <div class="form-input-group">
                          <span class="input-group-addon">血氧值(%)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.result type="text"}}
															{{else}}
															<div class="input-group-content">{{health.result}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">脉搏(times/min)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtion type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtion}}</div>
															{{/if}}
                          </div>
                      </div>
                      {{else}}
                      {{#if bloodFatShow}}
                      <div class="form-input-group">
                          <span class="input-group-addon">胆固醇(mmol/L)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.result type="text"}}
															{{else}}
															<div class="input-group-content">{{health.result}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">高密度脂蛋白胆固醇(mmol/L)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtion type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtion}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">甘油三酯含量(mmol/L)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionSec type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionSec}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">低密度脂蛋白胆固醇(mmol/L)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionThir type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionThir}}</div>
															{{/if}}
                          </div>
                      </div>
                      <div class="form-input-group">
                          <span class="input-group-addon">总胆固醇和高密度胆固醇的比值(%)：</span>
                          <div>
														{{#if detailEdit}}
                              {{input class="input-group-content" value=health.resultAddtionFou type="text"}}
															{{else}}
															<div class="input-group-content">{{health.resultAddtionFou}}</div>
															{{/if}}
                          </div>
                      </div>
                      {{else}}
                          <div class="form-input-group">
                              <span class="input-group-addon {{if health.itemRemark '' 'hidden'}}">体检结果({{health.itemRemark}})：</span>
                              <span class="input-group-addon {{if health.itemRemark 'hidden' ''}}">体检结果：</span>
                              <div>
																{{#if detailEdit}}
                                  {{input class="input-group-content" value=health.result type="text"}}
																	{{else}}
																	<div class="input-group-content">{{health.result}}</div>
																	{{/if}}
                              </div>
                          </div>
                          {{/if}}
                          {{/if}}
                          {{/if}}
                      {{/if}}
                  {{/if}}
              </div>

							<!-- <div class="form-input-group">
								<span class="input-group-addon {{if health.itemRemark '' 'hidden'}}">体检结果{{remark}}：</span>
                <span class="input-group-addon {{if health.itemRemark 'hidden' ''}}">体检结果：</span>
								{{#if detailEdit}}
									{{input class="input-group-content" value=health.result type="text"}}
								{{else}}
									<div class="input-group-content">{{health.result}}</div>
								{{/if}}
							</div> -->
					</div>
				</div>
				<!-- 列表编辑 -->
				<div class="padding-top30 center">
					<p class="text-center user-add-btn margin0auto inlineBlock">
						{{#if detailEdit}}
							{{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-check" text='保存' }}
							{{/ui/mix-button}}
							{{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-mail-reply" text='取消' clickAction="detailCancel" detailCancel="detailCancel" }}
							{{/ui/mix-button}}
						{{/if}}
					</p>
				</div>
			{{/bs-form}}
		</div>
		<!-- /BOX-BODY -->
	</div>
</div>

<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
      	<div class="row">
          <div class="col-sm-9 nopadding-left">
        	  <!--搜索-->
            <div class="col-sm-7" style="font-size:24px;">
        	    <div class="input-group">
            		{{assessTypeName}}
        	    </div>
        	  </div>
        	  <!--搜索-->
          </div>
      	  <div class="user-add-btn col-sm-3 nopadding-right">
            {{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='新增'  clickAction="toDetailPage" toDetailPage="toDetailPage"}}
            {{/ui/mix-button}}
      	  </div>
      	</div>
        <table  cellpadding="0" cellspacing="0" border="0" class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
              <th rowspan="1" colspan="1" width="">名称</th>
              <th rowspan="1" colspan="1" width="">描述</th>
              <th rowspan="1" colspan="1" width="">上级内容项</th>
              <th rowspan="1" colspan="1" width="">数据类型</th>
              <th rowspan="1" colspan="1" width="">序号</th>
            </tr>
          </thead>
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#if allRiskList}}
              {{#each riskList as |risk|}}
              <tr  {{action "toDetailPage" risk on="click"}}>
                <td class="ellipsis" style="font-weight:bold;">{{risk.name}}</td>
                <td class="ellipsis" >{{risk.remark}}</td>
                <td class="ellipsis" >{{risk.parent.name}}</td>
                <td class="ellipsis" >{{risk.valueType.typename}}</td>
                <td class="ellipsis" >{{risk.sort}}</td>
              </tr>
                {{#if risk.children}}
                  {{#each risk.children as |child|}}
                    <tr style="text-indent:10px;" {{action "toDetailPage" child on="click"}}>
                      <td class="ellipsis" >{{child.name}}</td>
                      <td class="ellipsis" >{{child.remark}}</td>
                      <td class="ellipsis" >{{child.parent.name}}</td>
                      <td class="ellipsis" >{{child.valueType.typename}}</td>
                      <td class="ellipsis" >{{child.sort}}</td>
                    </tr>
                  {{/each}}
                {{/if}}
              {{/each}}
            {{else}}
              <div class="nodate">暂无数据</div>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /BOX -->
</div>

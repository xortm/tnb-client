
<div class="col-sm-12">
	<div class="box margin-middle max-width">
		<!-- BOX-BODY -->
		<div class="box-body">
			{{#bs-form formLayout=formLayout model=deviceModel invalid=(action "invalid")}}
			<div class="row">
				<div class="col-xs-12">
					<p class="user-add-btn">
						{{#if detailEdit}}
						{{else}}
							{{#ui/form-function editAction="detailEditClick" detailEditClick="detailEditClick"
							removeAction="delById" delById="delById" }}
							{{/ui/form-function}}
						{{/if}}
					</p>
				</div>

			<!-- 列表详细介绍 -->
				<div class="col-xs-12 nopadding-left">
					<div class="col-xs-12 nopadding-horizontal mt20">
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">方案名称：</span>
								{{#if detailEdit}}
                  {{#if id}}
                    {{bs-form-element property="deviceName" class="inline-block form-input-group label-normal" controlType="deviceName" placeholder=deviceInfo.deviceName}}
                  {{else}}
                    {{bs-form-element property="deviceName" class="inline-block form-input-group label-normal" controlType="deviceName" placeholder='方案名称(必填)'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceInfo.deviceName}}</div>
								{{/if}}
							</div>
						</div>
            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">厂家名称：</span>
								{{#if detailEdit}}
                  {{#if id}}
                    {{bs-form-element property="vender" class="inline-block form-input-group label-normal" controlType="vender" placeholder=deviceInfo.vender}}
                  {{else}}
                    {{bs-form-element property="vender" class="inline-block form-input-group label-normal" controlType="vender" placeholder='厂家名称(必填)'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceInfo.vender}}</div>
								{{/if}}
							</div>
						</div>
            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">参考价格(元)：</span>
								{{#if detailEdit}}
                  {{#if id}}
                    {{bs-form-element property="price" class="inline-block form-input-group label-normal" controlType="price" placeholder=deviceInfo.price}}
                  {{else}}
                    {{bs-form-element property="price" class="inline-block form-input-group label-normal" controlType="price" placeholder='参考价格(必填)'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceInfo.price}}</div>
								{{/if}}
							</div>
						</div>
            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">使用情况：</span>
								{{#if detailEdit}}
                  {{#if id}}
                    {{bs-form-element property="status" class="inline-block form-input-group label-normal" controlType="status" placeholder=deviceInfo.status}}
                  {{else}}
                    {{bs-form-element property="status" class="inline-block form-input-group label-normal" controlType="status" placeholder='使用情况(必填)'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceInfo.status}}</div>
								{{/if}}
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">类型编号：</span>
								{{#if detailEdit}}
                  {{#if id}}
                    {{bs-form-element property="code" class="inline-block form-input-group label-normal" controlType="code" placeholder=deviceInfo.code}}
                  {{else}}
                    {{bs-form-element property="code" class="inline-block form-input-group label-normal" controlType="code" placeholder='类型编号(必填)'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceInfo.code}}</div>
								{{/if}}
							</div>
						</div>
            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">方案描述：</span>
								{{#if detailEdit}}
                  {{#if id}}
                    {{bs-form-element property="remark" class="inline-block form-input-group label-normal" controlType="remark" placeholder=deviceInfo.remark}}
                  {{else}}
                    {{bs-form-element property="remark" class="inline-block form-input-group label-normal" controlType="remark" placeholder='方案描述(必填)'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceInfo.remark}}</div>
								{{/if}}
							</div>
						</div>
          </div>
				</div>
			<!-- 列表详细介绍 -->
		</div>
			<div class="text-center padding-top30">
					<p class="text-center user-add-btn" style="display:inline-block;margin:0 auto!important ">
					{{#if detailEdit}}
						{{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-check"  text='保存' clickAction="savedevice" savedevice="savedevice"}}
						{{/ui/mix-button}}
						{{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-mail-reply"  text='取消'  clickAction="detailCancel" detailCancel="detailCancel" }}
						{{/ui/mix-button}}
					{{else}}
					{{/if}}
					</p>
			</div>
			{{/bs-form}}
		</div>
		<!-- /BOX-BODY -->
	</div>
</div>

{{#if showpopInvitePassModal}}
	{{#bs-modal body=false footer=false header=false closedAction=(action "invitation")
	submitAction=(action "cancelPassSubmit" deviceInfo)}}
		{{#bs-modal-header}}
			<h3 class="modal-title">删除提示</h3>
		{{/bs-modal-header}}
		{{#bs-modal-body}}
			<h4 class="modal-title">是否删除该条记录？</h4>
		{{/bs-modal-body}}

		{{#bs-modal-footer as |footer|}}
			{{#bs-button action=(action "cancelPassSubmit" deviceInfo) type="primary" disabled=prepaidDisabled}}确定{{/bs-button}}
			{{#bs-button action=(action "invitation") type="default"}}取消{{/bs-button}}
		{{/bs-modal-footer}}
	{{/bs-modal}}
{{/if}}

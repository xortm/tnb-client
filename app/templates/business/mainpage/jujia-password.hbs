<div id="jujiaPasswordContainer" class="mainContent">
  <div class="wrapperInner">
    <ul class="nopadding-left border-none-input">
      <li class="height30 padding-left-10 border-bottom-1 line-height-30">
        <span class="padding-left-8" style="border-left:2px solid #008040; color:#000000; font-size:18px;">旧密码</span>
      </li>
      <li>
        {{input type="password" class="height44 font16 fullWidth padding-left-20 border-bottom-1" id="password" value=password   placeholder="请输入旧密码"}}
      </li>

      <li class="height30 padding-left-10 line-height-30">
        <span class="padding-left-8" style="border-left:2px solid #008040; color:#000000; font-size:18px;">新密码</span>
      </li>
      <li class="">
        {{input type="password" class="height44 font16 fullWidth padding-left-20 border-bottom-1 border-top-1" id="newPass" value=newPass   placeholder="请输入新密码"}}
      </li>
      <li>
        {{input type="password" class="height44 font16 fullWidth padding-left-20 border-bottom-1" id="confirmPass" value=confirmPass placeholder="请再次输入新密码"}}
      </li>
      <li class="font14 padding10" style="color:#D0011B">
        提示:新密码需包含6位以上字符
      </li>
    </ul>
    <div class="tip-text-color top10 bottom8 min-height-18 text-center" style="color:#D0011B">{{responseInfo}}</div>

    {{#ui/mobile/gestures-container}}
      <div class="the-confirm" id="jujiaPassword" style="background-color:transparent;border:1px solid #028142;color:#333333;font-size:16px;" {{action 'jujiaPassword' on='tap'}}>确&nbsp;&nbsp;&nbsp;定</div>
    {{/ui/mobile/gestures-container}}
  </div>
</div>
{{ui/container/infinite-scroll moniteData="jujiaPasswordList" didRenderAction="didRender" didInsertElementAction="didInsertElement"}}

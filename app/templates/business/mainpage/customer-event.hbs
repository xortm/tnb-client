<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
      	<div class="row">
          <div class="col-sm-12">
        	  <!--搜索-->
            <div class="col-sm-2 ">
              {{#power-select class="inline-block" placeholder="选择老人" options=customerList selected=customer searchField="namePinyin" noMatchesMessage="没有相关内容"
              allowClear=true onchange=(action "selectCustomer" ) as |customer|}}
              {{customer.name}}
              {{/power-select}}
            </div>
            <div class="col-sm-8 nopadding-right nopadding-left">
              {{callbusi/time-search class="inline-block" text='按日期查询' dateShow=dateShow chooseDate=chooseDate search="search"
                         submmit="submmit" emptied='emptied' changeBeginDateAction='changeBeginDateAction' changeEndDateAction='changeEndDateAction'}}
            </div>
            <div class="user-add-btn col-sm-3 pull-right nopadding-right">
              {{#ui/mix-button class=" user-btn pull-right" iconClass="fa-plus"  text='新增事件'  clickAction="toDetailPage" toDetailPage="toDetailPage" style="padding-right:0px;margin-right:0px;"}}
              {{/ui/mix-button}}
            </div>
        </div>
      	</div>
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
              <th rowspan="1" colspan="1" width="">老人</th>
              <th rowspan="1" colspan="1" width="">事件名称</th>
              <th rowspan="1" colspan="1" width="">事件类型</th>
              <th rowspan="1" colspan="1" width="">日期</th>
            </tr>
          </thead>
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#each eventList as |event|}}
            <tr {{action "toDetailPage" event on="click"}}>
              <td class="ellipsis">{{event.customer.name}}</td>
                <td class="ellipsis">{{event.name}}</td>
              <td class="ellipsis">{{event.type.typename}}</td>
              <td class="ellipsis">{{event.eventTimeStr}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{#if eventList }}
            {{page-numbers content=eventList showFL=true numPagesToShow=10}}
        {{else}}
                <h1 class="col-sm-12 center unTask"></h1>
        {{/if}}
      </div>
    </div>
  </div>
  <!-- /BOX -->
</div>

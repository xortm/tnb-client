							{{else}}
								<div class="font-light input-group-content">{{orgModel.linkManQQ}}</div>
							{{/if}}
						</div>

					</div>
					<div class="col-xs-12 col-sm-6 nopadding-left ">
						<div class="form-input-group label-normal">
							<span class="input-group-addon">&emsp;邮&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;箱：</span>
							{{#if editModel}}
								{{input class="inline-block input-group-content" value=orgModel.linkManMail type="text" placeholder="您的电子邮箱"}}
							{{else}}
								<div class="font-light input-group-content">{{orgModel.linkManMail}}</div>
							{{/if}}
						</div>

					</div>
				</div>


			</div>
			<!--<div class="line">
                    <div class="col-xs-12 col-sm-6 nopadding-left ">
                        <div class="form-input-group label-normal">
                            <span class="input-group-addon">&emsp;所属机构：</span>
                            {{#if (eq operateFlag 'edit')}}
                                <div class="font-light input-group-content">{{orgModel.org.name}}</div>

{{#bs-modal-footer class="user-add-btn"}}
  {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save"  text='确定' clickAction="saveAdminClick" saveAdminClick="saveAdminClick" }}
  {{/ui/mix-button}}

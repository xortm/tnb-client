						      <br> avatarUrl
						      {{#if color}}
						      <span class={{if color 'trueColor' 'falseColor'}}>{{errorText}}</span>
						      {{/if}} -->
								<!--
									{{#ui/img-intergration name="licenseImg" hasUploader=true imgSrc=orgModel.avatarUrl height=110 width=110 margin-left=0 uploadUrl=uploadUrl uploadSucc="uploadSucc" uploadFail="uploadFailImg" businessType=constants.uploadBusinessType_headimg }}
									{{/ui/img-intergration}}
																	-->
							</div>
						</div>

					</div>
				</div>
				<div class="line">

				</div>
				<div class="line">
					<div class="col-xs-12  nopadding-left ">

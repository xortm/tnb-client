		<!-- 列表编辑 -->

		<!---->

		<div class="center">
			<p class="text-center user-add-btn padding-top30 inlineBlock margin0auto">
				{{#if editModel}}
					{{#ui/mix-button class="user-btn times-btn body-text-color  pull-right" iconClass="fa fa-mail-reply" text='取消' clickAction="cancelEdit" cancelEdit="cancelEdit" clickActParams=testParams}}
					{{/ui/mix-button}}
					{{#ui/mix-button class="user-btn edit-btn body-text-color  pull-right" iconClass="fa-check" text='保存' }}
					{{/ui/mix-button}}
				{{/if}}
			</p>
		</div>
	{{/bs-form}}
	</div>
	<!-- /BOX-BODY -->
</div>

<div class='box max-width row' style="margin: 20px auto;">
	<div style="clear:both" />
	<div class="sign col-sm-12 top30 nopadding-left">
			<strong class="font16 font-black">管理员账户信息</strong>
	</div>
	<div class="line row">
		<div class="col-xs-12 nopadding-horizontal mt20">
			{{#if showNewLoginName}}
				<div class="col-xs-12 col-sm-6 nopadding-left">
					<div class="form-input-group label-normal">
						<span class="input-group-addon">&emsp;请输入新的管理员账号：</span>
						{{input type="text" key-down="checkMobile" class="font-light input-group-content" maxlength="11" value=newLoginName placeholder="请输入管理员账号"}}
					</div>
				</div>
				{{#if newLoginNameMessage}}
					<span class="line-height-35 color999999">{{newLoginNameMessage}}</span>
				{{/if}}
				<div class="col-xs-12 center">
					<p class="text-center user-add-btn padding-top30 inlineBlock margin0auto">
						{{#ui/mix-button class="user-btn times-btn body-text-color  pull-right" iconClass="fa fa-mail-reply" text='取消' clickAction="cancelLogin" cancelLogin="cancelLogin"}}
						{{/ui/mix-button}}
						{{#ui/mix-button class="user-btn edit-btn body-text-color  pull-right" iconClass="fa-check" text='保存'  clickAction="saveLoginName" saveLoginName="saveLoginName"}}
						{{/ui/mix-button}}
					</p>
				</div>
			{{else}}
				<div class="col-xs-12 col-sm-6 nopadding-left ">
					<div class="form-input-group label-normal">
						<span class="input-group-addon">&emsp;管理员账号(手机号码)：</span>
						<div class="font-light input-group-content">{{orgModel.admin.loginName}}</div>
							{{log "orgModel.admin.loginName" orgModel.admin.loginName}}
							{{log "orgModel.admin" orgModel.admin}}
					</div>
				</div>

				<div class="user-add-btn padding-top10 font18 pointer text-underline color-like-a" {{action 'checkOldPhone' on='click'}}>
						修改手机号
				</div>
			{{/if}}

		</div>
	</div>
</div>

<!-- 获取以前手机验证码弹层 -->
{{#if checkOldPhoneModel}}
{{#bs-modal body=false footer=false header=false closedAction=(action "cancelPassSubmit")}}
{{#bs-modal-header}}
<h4 class="modal-title">验证原手机账号</h4>
{{/bs-modal-header}}
{{#bs-modal-body}}
  <div class="clearfix">
    <div class="col-sm-12 font14">
			<div class="pull-left">
				请先通过验证码验证管理员原手机账号:
			</div>
			<div class="pull-left padding-left5">
        {{orgModel.admin.loginName}}
      </div>
    </div>
		<div class="col-sm-12 top15">
			<div class="pull-left">
				<div class="form-input-group label-normal">
					{{#if isSSend}}
						<div class="user-add-btn font14 line-height-30">
							{{secondS}}秒后重试
						</div>
					{{else}}
						{{#if theTextModel}}
							<div class="user-add-btn padding-top5 font14 pointer text-underline color-like-a" {{action 'editAdminLoginName' on='click'}}>
									重新获取验证码
							</div>
						{{else}}
							<div class="user-add-btn padding-top5 font14 pointer text-underline color-like-a" {{action 'editAdminLoginName' on='click'}}>
									获取验证码
							</div>
						{{/if}}
					{{/if}}
				</div>
			</div>
			<div class="padding-left-15 pull-left">
        {{input type="text" key-down="checkMobile" class="form-control" maxlength="6" value=oldAuthCode placeholder="请输入验证码"}}
				 <!-- {{callbusi/busi-form-element class="full-width" placeholder="验证码(必填)" model=adminInfo property="authCode"}} -->
			</div>
			<div class="padding-left-15 pull-left font14" style="line-height:30px;">
				{{theText}}
			</div>
			<div class="padding-left-15 pull-left font14" style="line-height:30px;">
				{{#if showOldMessage}}
					{{oldMessage}}
				{{/if}}
			</div>
    </div>
  </div>
  {{/bs-modal-body}}
{{#bs-modal-footer class="user-add-btn"}}
  {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save"  text='确定' clickAction="changeLoginName" changeLoginName="changeLoginName" }}
  {{/ui/mix-button}}
  {{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='取消'  clickAction="cancelPassSubmit" cancelPassSubmit="cancelPassSubmit" }}
  {{/ui/mix-button}}
{{/bs-modal-footer}}
{{/bs-modal}}
{{/if}}

<!-- 获取要绑定手机验证码弹层 -->
{{#if changeLoginNameModel}}
{{#bs-modal body=false footer=false header=false closedAction=(action "cancelPassSubmit")}}

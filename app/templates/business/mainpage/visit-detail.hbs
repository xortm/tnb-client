<div class="col-md-12">
    <div class="box margin-middle max-width">
        <!-- BOX-BODY -->
        <div class="box-body">
            {{#bs-form formLayout=formLayout model=vistModel action=(action "saveWarning") invalid=(action "invalid")}}
                <!-- 列表编辑-->
                <div class="row">
                    <div class="col-xs-12">
                        <p class="user-add-btn">
                            <!-- <button class="btn btn-primary" type="button"><i class="fa fa-check icon-white"></i>&ensp;保存</button>
						<button class="btn btn-light-grey"><i class="fa fa-times"></i>&ensp;取消</button> -->
                            {{#if detailEdit}}
                                {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save" text='保存' clickActParams=vist}}
                                {{/ui/mix-button}}
                                {{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo" text='取消' clickAction="detailCancel" detailCancel="detailCancel" }}
                                {{/ui/mix-button}}
                            {{else}}
                                {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-edit" text='编辑' clickAction="detailEditClick" detailEditClick="detailEditClick" clickActParams=vist}}
                                {{/ui/mix-button}}
                                {{#ui/mix-button class="user-btn trash-btn" iconClass="fa fa-trash-o" text='删除' clickAction="delById" delById="delById" clickActParams=vist}}
                                {{/ui/mix-button}}
                            {{/if}}
                        </p>
                    </div>
                    <div class="col-xs-12 nopadding-horizontal mt20">
                      <div class="col-xs-12 col-sm-6">
                          <div class="form-input-group">
                              <span class="input-group-addon">回访时间：</span>
                              {{#if detailEdit}}
                                  <div class="inline-block form-input-group">
                                      {{ui/addon/bs-datetimepicker date=vistModel.createDate placeholder="回访时间"
                                      locale="zh-CN" iconClasses="fa fa-calendar" format='YYYY-MM-DD' value=vistModel.createDate
                                      show="dpShowAction" change="changeDateAction" }}
                                  </div>
                              {{else}}
                                  <div class="input-group-content">{{vistModel.createDateTimeString}}</div>
                              {{/if}}
                          </div>
                      </div>
                      <div class="col-xs-12 col-sm-6">
                          <div class="form-input-group">
                              <span class="input-group-addon">回访类型：</span>
                              {{#if detailEdit}}
                                  {{#bs-form-element class="inline-block form-input-group" controlType="backVistType" property="backVistType" }}
                                      {{callbusi/dict-selector curDict=vistModel.backVistType groupCode=constants.backVistType showName="回访类型" dictSelect="backVistSelect" value=vistModel.backVistType preselected=false}}
                                  {{/bs-form-element}}
                              {{else}}
                                  <div class="input-group-content">{{vistModel.backVistType.typename}}</div>
                              {{/if}}
                          </div>
                      </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-input-group">
                                <span class="input-group-addon">回访人：</span>
                                <!-- <input class="input-group-content" placeholder=""/> -->
                                {{#if detailEdit}}
                                    {{#power-select class="input-group-content" placeholder="回访人" options=staffList selected=defaultStaff searchField="vistUserPinyin" noMatchesMessage="没有相关内容" allowClear=true onchange=(action "selectStaff" ) as |staff|}}
                                        {{staff.name}}
                                    {{/power-select}}
                                {{else}}
                                    <div class="font-light input-group-content">{{vistModel.vistUser.name}}</div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 列表编辑 -->
            {{/bs-form}}
        </div>
        <!-- /BOX-BODY -->
    </div>
</div>

<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
      	<div class="row">
          <div class="col-sm-9">
        	  <!--搜索-->
            <div class="col-sm-3 nopadding-left">
        	    <div class="input-group">
                {{input class="form-control" type="text" placeholder="项目名称" value=queryCondition enter="search"}}
      	        <span class="input-group-btn">
        		      <button class="btn btn-primary btn-reduce" type="button" style="touch-action: manipulation; -ms-touch-action: manipulation;" {{action "search" on="click"}}>
                    <i class="fa fa-search"></i>
                  </button>
      	        </span>
        	    </div>
        	  </div>
            <div class="col-sm-3 nopadding-left">
              {{callbusi/dict-selector groupCode=constants.serviceType
                showName="项目类型" dictSelect="serviceTypeSelect" preselected=false allowClear=true}}
            </div>
            <div class="col-sm-3 nopadding-left">
              {{callbusi/dict-selector groupCode=constants.countType
                showName="执行方式" dictSelect="countTypeSelect" preselected=false allowClear=true}}
            </div>
            <div class="col-sm-3 nopadding-left">
              {{callbusi/dict-selector groupCode=constants.serviceValueType
                showName='服务类型' dictSelect="serviceValueTypeSelect" preselected=false allowClear=true}}
            </div>
        	  <!--搜索-->
        </div>
          <div class="user-add-btn col-sm-3 nopadding-right">
            {{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='新增护理项目'  clickAction="toDetailPage" toDetailPage="toDetailPage"}}
            {{/ui/mix-button}}
          </div>
      	</div>
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
							<th rowspan="1" colspan="1" width="">项目名称</th>
              <th rowspan="1" colspan="1" width="">类型</th>
              <th rowspan="1" colspan="1" width="">执行方式</th><!-- 类别为按时显示周期和频次，类别为计次不显示周期和频次 -->
							<th rowspan="1" colspan="1" width="">周期</th>
              <th rowspan="1" colspan="1" width="">频次(次)</th>
              <th rowspan="1" colspan="1" width="">参考时长(分钟)</th>
              <th rowspan="1" colspan="1" width="">项目说明 </th>
            </tr>
          </thead>
          {{#if serviceList}}
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#each serviceList as |service|}}
						<tr {{action "toDetailPage" service on="click"}}>
							<td class="ellipsis">{{service.name}}</td>
              <td class="ellipsis">{{service.serviceType.typename}}</td>
							<td class="ellipsis">{{service.countType.typename}}</td>
							<td class="ellipsis">{{service.period.typename}}</td>
							<td class="ellipsis">{{service.frequency}}</td>
							<td class="ellipsis">{{service.serviceTime}}</td>
              <td class="ellipsis">{{service.remark}}</td>
						</tr>
            {{/each}}
          </tbody>
          {{else}}
          <div class="nodate">暂无数据</div>
          {{/if}}
        </table>
        {{#if serviceList }}
            {{page-numbers content=serviceList showFL=true numPagesToShow=5}}
            {{else}}
                <h1 class="col-sm-12 center unTask"></h1>
        {{/if}}
      </div>
    </div>
  </div>
  <!-- /BOX -->
</div>

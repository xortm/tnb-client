
<div class="col-sm-12">
	<div class="box margin-middle max-width">
		<!-- BOX-BODY -->
		<div class="box-body">
			{{#bs-form formLayout=formLayout model=deviceModel invalid=(action "invalid")}}
			<div class="row">
				<div class="col-xs-12">
					<p class="user-add-btn">
            {{#if detailEdit}}

						{{else}}
							{{#ui/form-function editAction="detailEditClick" detailEditClick="detailEditClick"
							removeAction="delById" delById="delById" clickActParams=deviceInfo}}
							{{/ui/form-function}}
						{{/if}}
					</p>
				</div>
				<!-- 列表详细介绍 -->
				<div class="col-xs-12 nopadding-left">
					<div class="col-xs-12 nopadding-horizontal mt20">
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">类型名称：</span>
								{{#if detailEdit}}
                  {{#if id}}
									     {{bs-form-element property="name" class="inline-block form-input-group label-normal" placeholder='必填'}}
                  {{else}}
                    {{bs-form-element property="name" class="inline-block form-input-group label-normal" placeholder='必填'}}
                  {{/if}}
								{{else}}
										<div class="input-group-content" >{{deviceTypeItem.item.typename}}</div>
								{{/if}}
							</div>
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">类型编码：</span>
								{{#if detailEdit}}
                  {{#if id}}
  									  {{bs-form-element property="code" class="inline-block form-input-group label-normal" placeholder='必填'}}
                  {{else}}
                    {{bs-form-element property="code" class="inline-block form-input-group label-normal" placeholder='必填'}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceTypeItem.item.typecode}}</div>
								{{/if}}
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">所属方案：</span>
								{{#if detailEdit}}
                  {{#if id}}
  									<div class="input-group-content">{{deviceTypeItem.typeName}}</div>
                  {{else}}
                    {{#bs-form-element class="inline-block form-input-group" controlType="type"  property="type" }}
                      {{#power-select  options=deviceProList selected=deviceProject placeholder="必填"
                        allowClear=true onchange=(action "deviceProSelect") as |deviceType|}}
                        {{deviceType.typename}}
                      {{/power-select}}
  									{{/bs-form-element}}
                  {{/if}}
								{{else}}
									<div class="input-group-content">{{deviceTypeItem.typeName}}</div>
								{{/if}}
							</div>
						</div>
						<div class="col-xs-12 col-sm-12">
							<div class="form-input-group">
								<span class="input-group-addon">备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注：</span>
								{{#if detailEdit}}
									{{textarea type="text" class="full-width inline-block form-input-group label-normal form-control" value=deviceInfo.remark placeholder='备注'}}
								{{else}}
									<div class="input-group-content">{{deviceTypeItem.remark}}</div>
								{{/if}}
							</div>

						</div>

					</div>
				</div>
				<div class="center">
					<p class="text-center user-add-btn padding-top30 inlineBlock margin0auto">
						{{#if detailEdit}}
              {{#if id}}
                {{#ui/mix-button class="user-btn edit-btn body-text-color" iconClass="fa fa-check"  text='保存' clickAction="editSaveClick" editSaveClick="editSaveClick"}}
                {{/ui/mix-button}}
              {{else}}
  							{{#ui/mix-button class="user-btn edit-btn body-text-color" iconClass="fa fa-check"  text='保存' clickAction="detailSaveClick" detailSaveClick="detailSaveClick"}}
  							{{/ui/mix-button}}
              {{/if}}
  							{{#ui/mix-button class="user-btn times-btn body-text-color" iconClass="fa fa-mail-reply"  text='取消'  clickAction="detailCancel" detailCancel="detailCancel" }}
  							{{/ui/mix-button}}
						{{/if}}
					</p>
				</div>
				<!-- 列表详细介绍 -->
			</div>

			{{/bs-form}}
		</div>
		<!-- /BOX-BODY -->
	</div>
</div>


{{#if showpopInvitePassModal}}
	{{#bs-modal body=false footer=false header=false closeAction="invitation"}}
		{{#bs-modal-header}}
			<h3 class="modal-title">删除提示</h3>
		{{/bs-modal-header}}
		{{#bs-modal-body}}
			<h4 class="modal-title">是否删除该条记录？</h4>
		{{/bs-modal-body}}

		{{#bs-modal-footer as |footer|}}
			{{#bs-button action=(action "cancelPassSubmit" planInfo) type="primary" disabled=prepaidDisabled}}确定{{/bs-button}}
			{{#bs-button action=(action "invitation") type="default"}}取消{{/bs-button}}
		{{/bs-modal-footer}}
	{{/bs-modal}}
{{/if}}

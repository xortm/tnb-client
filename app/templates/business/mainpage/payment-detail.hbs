<div class="col-sm-12">
	<div class="box margin-middle max-width">
		<!-- BOX-BODY -->
		<div class="box-body">
      {{#bs-form formLayout=formLayout model=tradeModel invalid=(action "invalid")}}
			<div class="row">
				<div class="col-xs-12">
					<p class="user-add-btn">
						{{#if detailEdit}}
  						{{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save"  text='保存' clickAction="detailSaveClick" detailSaveClick="detailSaveClick" clickActParams=tradeInfo}}
  						{{/ui/mix-button}}
							{{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='取消'  clickAction="detailCancel" detailCancel="detailCancel" }}
			        {{/ui/mix-button}}
						{{else}}
              {{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='返回'  clickAction="detailCancel" detailCancel="detailCancel" }}
              {{/ui/mix-button}}
						{{/if}}
					</p>
				</div>
				<!-- 列表详细介绍 -->
				<div class="col-xs-12 nopadding-left">
					<div class="col-xs-12 nopadding-horizontal mt20">
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">用户姓名：</span>
								{{#if detailEdit}}
                  {{#bs-form-element class="inline-block form-input-group" controlType="customer"  property="customer" }}
									{{#power-select class="input-group-content" placeholder='必填' options=customerList  selected=defaultCustomer searchField="namePinyin"
									noMatchesMessage="没有相关内容"	allowClear=false	onchange=(action "selectCustomer" ) as |customer|}}
										{{customer.name}}
									{{/power-select}}
                  {{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{tradeInfo.payAccount.customer.name}}</div>
								{{/if}}

							</div>

						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">消费金额(元)：</span>
								{{#if detailEdit}}
										{{bs-form-element property="money" class="inline-block form-input-group label-normal" controlType="money" placeholder='必填'}}
								{{else}}
									<div class="input-group-content">{{tradeInfo.money}}</div>
								{{/if}}
							</div>

						</div>


						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">消费类型：</span>
								{{#if detailEdit}}
                {{#bs-form-element class="inline-block form-input-group" controlType="type"  property="type" }}
									{{callbusi/dict-selector class="inline-block" curDict=tradeModel.type groupCode=constants.consumeType
										showName='必填' value=tradeModel.type preselected=false}}
                {{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{tradeInfo.type.typename}}</div>
								{{/if}}
							</div>

						</div>

            <div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
							<span class="input-group-addon">账户类型：</span>
								{{#if detailEdit}}
                {{#bs-form-element class="inline-block form-input-group" controlType="payAccountType"  property="payAccountType" }}
									{{callbusi/dict-selector class="inline-block" curDict=tradeModel.payAccountType groupCode=constants.accountType
										showName='必填' value=tradeModel.payAccountType preselected=false}}
                {{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{tradeInfo.payAccount.type.typename}}</div>
								{{/if}}
							</div>

						</div>

						<div class="col-xs-12 col-sm-12">
							<div class="form-input-group">
								<span class="input-group-addon">备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注：</span>
								{{#if detailEdit}}
									{{textarea type="text" class="full-width inline-block form-input-group label-normal form-control" value=tradeInfo.remark}}
								{{else}}
									<div class="input-group-content">{{tradeInfo.remark}}</div>
								{{/if}}
							</div>

						</div>

					</div>
				</div>
				<!-- 列表详细介绍 -->
			</div>
      {{/bs-form}}
		</div>
		<!-- /BOX-BODY -->
	</div>
</div>

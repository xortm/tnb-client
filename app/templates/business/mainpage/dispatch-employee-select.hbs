{{#ui/mobile/gestures-container}}
  <div id="dispatchEmployeeSelectContainer" class="mainContent">
    <div class="wrapperInner">
      <!-- <div class="padding-left-10 padding-right-10 height40 line-height-40 bottom10 bgcolor-white">
        <span class="pull-left mobel padding-0-5 font16">请选择接单员工</span>
      </div> -->
      {{#each employeeList as |employee|}}
        <div class="padding-right-10 height40 line-height-40 bgcolor-white padding-left-20 font16" id="employee_{{employee.id}}" {{action 'confirmEmployee' employee.id on="tap"}}>
          {{employee.name}}
        </div>
        <div class="border-bottom-1 margin-leftright10"></div>
      {{/each}}
    </div>
  </div>

  {{#if showConfirm}}
  	{{#bs-modal body=false footer=false header=false closeAction="invitation"}}
  		{{#bs-modal-body}}
  			<div class="col-xs-12 nopadding-horizontal">
  				<div class="col-xs-12 nopadding-left col-xs-12">
  					<div class="form-input-group">
  						<span class="input-group-addon">您确定选择员工<span class="mobel padding-0-5 font16">{{employee.name}}</span>接单吗？</span>
  					</div>
  				</div>
        </div>
  		{{/bs-modal-body}}
  		{{#bs-modal-footer class="user-add-btn"}}
        {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save"  text='确定' clickAction="chooseEmployee" chooseEmployee="chooseEmployee"}}
        {{/ui/mix-button}}
        {{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='取消'  clickAction="invitation" invitation="invitation"}}
        {{/ui/mix-button}}
  		{{/bs-modal-footer}}
  	{{/bs-modal}}
  {{/if}}
{{/ui/mobile/gestures-container}}
{{ui/container/infinite-scroll moniteData="" didRenderAction="didRender"
didInsertElementAction="didInsertElement"}}

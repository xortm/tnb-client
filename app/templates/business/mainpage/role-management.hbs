<div class="col-sm-12">
	<!-- BOX -->
	<div class="box">
		<div class="box-body">
			<div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
				<div class="row">
					<div class="user-add-btn col-sm-3 pull-right nopadding-right">
						{{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='添加新角色' clickAction="toDetailPage" toDetailPage="toDetailPage"}}
						{{/ui/mix-button}}
					</div>
				</div>
				<table  id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
						<thead>
							<tr role="row">
								<th class="center">角色名称</th>
								<th class="center">角色描述</th>
								<th class="center">拥有权限</th>
							</tr>
						</thead>
						{{#if roleList}}
						<tbody role="alert" aria-live="polite" aria-relevant="all" class="">
							{{#each roleList as |role|}}
								<tr {{action "toDetailPage" role on="click"}}>
									<td width="15%" >{{role.name}}</td>
									<td width="15%" >{{role.remark}}</td>
									<td class=" nowrap"  style="max-width:200px;">{{role.privilegeStr}}</td>
								</tr>
							{{/each}}
						</tbody>
						{{else}}
						{{/if}}
					</table>


				<!--分页-->
				{{#if roleList }}
						{{page-numbers content=roleList showFL=true numPagesToShow=5}}
				{{else}}
								<h1 class="col-sm-12 center unTask"></h1>
				{{/if}}
				<!-- <div class="col-sm-6">
						{{callbusi/role-privileges currentRole=currentRole}}
				</div> -->
			</div>
		</div>
	</div>
	<!-- /BOX -->
</div>

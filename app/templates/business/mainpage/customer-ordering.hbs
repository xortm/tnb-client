{{#ui/mobile/gestures-container}}
<div id="customerOrderingContainer" class="mainContent {{if global_pageConstructure.showLoader 'hide' ''}}">
  <div class="wrapperInner">
  {{#if customerdayfoodplanList}}
    <div class="bgcolor-white">
    {{#each customerdayfoodplanList as |customerdayfoodplan|}}
      {{#callbusi/mobile/customer-ordering-list item=customerdayfoodplan outerClass="col-sm-6 col-xs-12 height-auto" currentDate=currentDate}}
      {{/callbusi/mobile/customer-ordering-list}}
    {{/each}}
    </div>
  {{else}}
    <div class="nodate">暂无数据</div>
  {{/if}}



  </div>

</div>
<div class="detail-dynamicsbtn" id="customer-ordering" {{action 'addOrdering' on="tap"}}>
  <img class="bottom2" width='15' src="assets/images/mobile/add.png" alt="">
  <span class="padding-left-10">添加菜单</span>
</div>
{{#if addNewOrdering}}
	{{#bs-modal body=false footer=false header=false closeAction="invitation"}}
		{{#bs-modal-body}}
			<div class="col-xs-12 nopadding-horizontal">
				<div class="col-xs-12 nopadding-left col-xs-12">
					<div class="form-input-group">
						<span class="input-group-addon">订餐日期：</span>
            {{input type="date" id='ordering-date' class="full-width" placeholder="" value=diningDate}}
					</div>
				</div>
      </div>
		{{/bs-modal-body}}
		{{#bs-modal-footer class="user-add-btn"}}
      {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save"  text='确定' clickAction="saveNewOrdering" saveNewOrdering="saveNewOrdering"}}
      {{/ui/mix-button}}
      {{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='取消'  clickAction="invitation" invitation="invitation"}}
      {{/ui/mix-button}}
		{{/bs-modal-footer}}
	{{/bs-modal}}
{{/if}}
{{/ui/mobile/gestures-container}}

{{ui/container/infinite-scroll moniteData="customerdayfoodplanList"
didRenderAction="didRender" didInsertElementAction="didInsertElement"}}

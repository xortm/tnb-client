<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline " role="grid">
      	<div class="row">
          <div class="col-sm-9">
        	  <!--搜索-->
            <div class="col-sm-5 nopadding-left">
							<div>
                {{#power-select  options=deviceProList selected=deviceProject placeholder="搜索方案名称"
          				allowClear=true onchange=(action "deviceProSelect") as |deviceType|}}
          				{{deviceType.typename}}
          			{{/power-select}}
	      			</div>
            </div>
            <div class="col-sm-5 nopadding-left">
        	    <div class="input-group">
                {{input class="form-control" type="text" placeholder="搜索类型名称" value=queryCondition enter="search"}}
      	        <span class="input-group-btn">
        		      <button class="btn btn-primary btn-reduce" type="button" style="touch-action: manipulation; -ms-touch-action: manipulation;" {{action "search" on="click"}}>
                    <i class="fa fa-search"></i>
                  </button>
      	        </span>
        	    </div>
        	  </div>
        	  <!--搜索-->
          </div>
      	  <div class="user-add-btn col-sm-3 nopadding-right">
            {{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='新增设备类型'  clickAction="toDetailPage" toDetailPage="toDetailPage"}}
            {{/ui/mix-button}}
          </div>
      	</div>
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
              <th rowspan="1" colspan="1" width="">类型名称</th>
              <th rowspan="1" colspan="1" width="">类型编码</th>
              <th rowspan="1" colspan="1" width="">所属方案</th>
              <th rowspan="1" colspan="1" width="">备注</th>
            </tr>
          </thead>
          {{#if deviceList}}
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#each deviceList as |device|}}
            <tr {{action "toDetailPage" device on="click"}}>
              <td class="ellipsis" >{{device.item.typename}}</td>
              <td class="ellipsis" >{{device.item.typecode}}</td>
              <td class="ellipsis" >{{device.typeName}}</td>
              <td >{{device.remark}}</td>
            </tr>
            {{/each}}
          </tbody>
          {{else}}
          <div class="nodate">暂无数据</div>
          {{/if}}
        </table>
        {{#if deviceList }}
            {{page-numbers content=deviceList showFL=true numPagesToShow=5}}
            {{else}}
                <h1 class="col-sm-12 center unTask"></h1>
        {{/if}}
      </div>
    </div>
  </div>
  <!-- /BOX -->
</div>

<div id="employeeAssessmentDetailContainer" class="mainContent {{if global_pageConstructure.showLoader 'hide' ''}}">
  <div class="wrapperInner">
    {{#ui/mobile/gestures-container}}
      <div class="clearfix bk-color-white">
        <div class="clearfix margin-top-10">
          {{log "employee in hbs:" employee.name}}
          <div class="pull-left width50B line-height-25 padding-right-18 text-right">考核员工:</div>
          <div class="pull-left width50B line-height-25">
            {{assessmentInfo.examiner.name}}
          </div>
        </div>
        <div class="clearfix">
          <div class="pull-left width50B line-height-25 padding-right-18 text-right">考核时间:</div>
          <div class="pull-left width50B line-height-25">
            {{assessmentInfo.examTimeStr}}
          </div>
        </div>
        <div class="clearfix">
          <div class="pull-left width50B line-height-25 padding-right-18 text-right">考核类型:</div>
          <div class="pull-left width50B line-height-25">
            {{assessmentInfo.type.typename}}
          </div>
        </div>
        <div class="clearfix">
          <div class="finished-detail width93B margin0auto">
            {{textarea class="" placeholder="请输入备注信息" value=assessmentInfo.remark}}
          </div>
        </div>
        {{ui/mobile/task-detail-button needDoubleClickPrevent=true touchStartAction="saveDetail" saveDetail="saveDetail" butContent="确定" outerClass="assessmentDetailBut"}}
      </div>
  {{/ui/mobile/gestures-container}}
  </div>
</div>
{{ui/container/infinite-scroll moniteData=""
didRenderAction="didRender" didInsertElementAction="didInsertElement"}}

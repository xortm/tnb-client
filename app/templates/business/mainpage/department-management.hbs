<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
      	<div class="row">
          <div class="col-sm-9">
        	  <!--搜索-->
            <div class="col-sm-5 nopadding-left">
        	    <div class="input-group">
            		{{input class="form-control" type="text" placeholder="按名称搜索" value=queryCondition enter="search"}}
      	        <span class="input-group-btn">
        		      <button class="btn btn-primary btn-reduce" type="button" style="touch-action: manipulation; -ms-touch-action: manipulation;" {{action "search" on="click"}}>
                    <i class="fa fa-search"></i>
                  </button>
      	        </span>
        	    </div>
        	  </div>
        	  <!--搜索-->
        </div>
          <div class="user-add-btn col-sm-3 nopadding-right">
            {{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='新增部门'  clickAction="toDetailPage" toDetailPage="toDetailPage"}}
            {{/ui/mix-button}}
          </div>
      	</div>
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
              <!-- <th rowspan="1" colspan="1" width="">部门编号</th> -->
              <th rowspan="1" colspan="1" width="">部门名称</th>
              <th rowspan="1" colspan="1" width="">部门简称</th>
              <th rowspan="1" colspan="1" width="">部门领导</th>
              <th rowspan="1" colspan="1" width="">说明</th>
            </tr>
          </thead>
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#each depList as |department|}}
            <tr {{action "toDetailPage" department on="click"}}>
              <!-- <td class="ellipsis">{{department.code}}</td> -->
              <td class="ellipsis">{{department.name}}</td>
              <td class="ellipsis">{{department.shortName}}</td>
              <td class="ellipsis">{{department.leaders}}</td>
              <td class="ellipsis">{{department.remark}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{#if depList }}
            {{page-numbers content=depList showFL=true numPagesToShow=5}}
        {{else}}
                <h1 class="col-sm-12 center unTask"></h1>
        {{/if}}
      </div>
    </div>
  </div>
  <!-- /BOX -->

</div>

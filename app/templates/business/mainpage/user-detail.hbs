<div class="col-md-12">
	<div class="box">
		<!-- BOX-BODY -->
		<div class="box-body">
			<div class="row">
				<div class="col-xs-12">
					<p class="user-add-btn">
						{{#if detailEdit}}
							<button class="btn btn-primary" type="button" {{action "detailBtnClick" on="click"}}><i class="fa fa-check icon-white"></i>&ensp;保存</button>
							<button class="btn btn-light-grey" {{action "detailCancel" on="click"}}><i class="fa fa-times"></i>&ensp;取消</button>
						{{else}}
							<button class="btn btn-primary" type="button" {{action "detailEditClick" on="click"}}><i class="fa fa-pencil"></i>&ensp;编辑</button>
						{{/if}}
					</p>
				</div>
			<!-- 列表详细介绍 -->
				<div class="marginLR-100">
					<div class="col-xs-12 nopadding-horizontal mt20">
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">护工姓名：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="李丽"/>
								{{else}}
									<div class="input-group-content">李丽</div>
								{{/if}}
							</div>
							
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">性&emsp;&emsp;别：</span>
								{{#if detailEdit}}
									<select class="input-group-content">
										<option value="女" selected="selected">女</option>
										<option value="男">男</option>
									</select>
								{{else}}
									<div class="input-group-content">女</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">民&emsp;&emsp;族：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="汉族"/>
								{{else}}
									<div class="input-group-content">汉族</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">户&emsp;&emsp;籍：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="北京市朝阳区xxxxxx"/>
								{{else}}
									<div class="input-group-content">北京市朝阳区xxxxxx</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">现&ensp;住&ensp;址：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="北京市昌平区xxxxxx"/>
								{{else}}
									<div class="input-group-content">北京市昌平区xxxxxx</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">邮&emsp;&emsp;箱：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="1235588898@qq.com"/>
								{{else}}
									<div class="input-group-content">1235588898@qq.com</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">身份证号：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="445281198803186624"/>
								{{else}}
									<div class="input-group-content">445281198803186624</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">联系电话：</span>
								{{#if detailEdit}}
									<input class="input-group-content" value="13355224466"/>
								{{else}}
									<div class="input-group-content">13355224466</div>
								{{/if}}
							</div>
							
						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">所属部门：</span>
								{{#if detailEdit}}
									<select class="input-group-content">
										<option value="护理部" selected="selected">护理部</option>
										<option value="护士部">护士部</option>
									</select>
								{{else}}
									<div class="input-group-content">护理部</div>
								{{/if}}
							</div>
							
						</div>
					</div>
				</div>
			<!-- 列表详细介绍 -->
			</div>
		</div>
		<!-- /BOX-BODY -->
	</div>
</div>

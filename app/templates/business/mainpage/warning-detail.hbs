
<div class="col-md-12">
	<div class="box margin-middle max-width">
		<!-- BOX-BODY -->
		<div class="box-body">
			{{#bs-form formLayout=formLayout model=warningModel action=(action "saveWarning") invalid=(action "invalid")}}
			<!-- 列表编辑-->
			<div class="row">
				<div class="col-xs-12">
					<p class="user-add-btn">
						{{#if detailEdit}}
						{{else}}
							{{#ui/form-function editAction="detailEditClick" detailEditClick="detailEditClick" removeAction="delById" delById="delById" }}
							{{/ui/form-function}}
						{{/if}}
					</p>
				</div>
					<div class="col-xs-12 nopadding-horizontal mt20">
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">用户姓名：</span>
								{{#if detailEdit}}
                {{#if flagEdit}}
									<div class="input-group-content">{{warning.caller.name}}</div>
									{{else}}
										{{#bs-form-element class="inline-block form-input-group" controlType="caller"  property="caller" }}
		                  {{#power-select class="inline-block input-group-content" placeholder="必填项" options=customerList selected=defaultCustomer searchField="namePinyin" noMatchesMessage="没有相关内容"
		                  allowClear=false onchange=(action "selectParent" ) as |name|}}
							        {{name.name}}
							        {{/power-select}}
										{{/bs-form-element}}
									{{/if}}
								{{else}}
									<div class="input-group-content">{{warning.caller.name}}</div>
								{{/if}}
		           </div>

						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">床&nbsp;位&nbsp;&nbsp;号：</span>
								{{#if detailEdit}}
									{{#if flagEdit}}
									<div class="input-group-content">{{warning.caller.bed.roomBedName}}</div>
									{{else}}
									<div class="input-group-content">{{defaultCustomer.bed.roomBedName}}</div>
									{{/if}}
								{{else}}
									<div class="input-group-content">{{warning.caller.bed.roomBedName}}</div>
								{{/if}}
							</div>

						</div>

						<div class="col-xs-12 col-sm-6">
							<div class="form-input-group">
								<span class="input-group-addon">时&emsp;&emsp;间：</span>
								{{#if detailEdit}}
										{{ui/addon/bs-datetimepicker date=warningModel.callTimeDate placeholder=""
											locale="zh-CN" iconClasses="fa fa-calendar" maxDate=today
											 show="dpShowAction" change="changeCallTimeAction" }}
								{{else}}
									<div class="input-group-content">{{warningModel.callTimeString}}</div>
								{{/if}}
							</div>

						</div>
						<div class="col-xs-12 col-sm-6">
		          <div class="form-input-group">
		            <span class="input-group-addon">预警说明：</span>
								{{#if detailEdit}}
									{{input  class="input-group-content" value=warning.reason}}
								{{else}}
									<div class="input-group-content">{{warning.reason}}</div>
								{{/if}}
		          </div>

		        </div>
		        <div class="col-xs-12 col-sm-6">
		          <div class="form-input-group">
		            <span class="input-group-addon">处&nbsp;理&nbsp;&nbsp;人：</span>
								{{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="operater"  property="operater" }}
						        {{#power-select class="input-group-content" placeholder="必填项" options=staffList selected=defaultStaff
										searchField="operaterPinyin" noMatchesMessage="没有相关内容"
						          allowClear=true onchange=(action "selectStaff" ) as |staff|}}
						          {{staff.name}}
						        {{/power-select}}
									{{/bs-form-element}}
				        {{else}}
				        <div class="font-light input-group-content">{{warning.operater.name}}</div>
				          {{/if}}

		          </div>

		        </div>
		        <div class="col-xs-12 col-sm-6">
		          <div class="form-input-group">
		            <span class="input-group-addon">处理状态：</span>
								{{#if detailEdit}}
									{{#bs-form-element class="inline-block form-input-group" controlType="flag"  property="flag" }}
										{{#power-select class="input-group-content" placeholder="必填项" options=flagList selected=warningModel.flag
										 noMatchesMessage="没有相关内容" allowClear=true onchange=(action "selectFlag" ) as |flag|}}
						          {{flag.typename}}
						        {{/power-select}}
									{{/bs-form-element}}
								{{else}}
									<div class="input-group-content">{{warningModel.flag.typename}}</div>
								{{/if}}
		          </div>

		        </div>
						<div class="col-xs-12 col-sm-12">
		          <div class="form-input-group">
		            <span class="input-group-addon">处理说明：</span>
								{{#if detailEdit}}
									{{textarea type="text" class="full-width inline-block form-input-group label-normal form-control" value=warning.operateNote}}
								{{else}}
									<div class="input-group-content">{{warning.exeRemark}}</div>
								{{/if}}
		          </div>
		        </div>
					</div>
			</div>
			<!-- 列表编辑 -->
			<div class="padding-top30 center">
				<p class="text-center user-add-btn margin0auto inlineBlock">
					{{#if detailEdit}}
					{{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-check"  text='保存' }}
					{{/ui/mix-button}}
					{{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-mail-reply"  text='取消'  clickAction="detailCancel" detailCancel="detailCancel" }}
					{{/ui/mix-button}}
					{{/if}}
				</p>
			</div>
			{{/bs-form}}
		</div>
		<!-- /BOX-BODY -->
	</div>
</div>

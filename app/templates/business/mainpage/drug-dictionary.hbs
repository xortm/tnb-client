<div class="col-sm-12">
  <!-- BOX -->
  <div class="box">
    <div class="box-body">
      <div id="datatable1_wrapper" class="dataTables_wrapper form-inline" role="grid">
      	<div class="row">
          <div class="col-sm-9">
        	  <!--搜索-->
            <div class="col-sm-5 nopadding-left">
        	    <div class="input-group">
                {{input class="form-control" type="text" placeholder="搜索药品名称" value=queryCondition enter="search"}}
      	        <span class="input-group-btn">
        		      <button class="btn btn-primary btn-reduce" type="button" style="touch-action: manipulation; -ms-touch-action: manipulation;" {{action "search" on="click"}}>
                    <i class="fa fa-search"></i>
                  </button>
      	        </span>
        	    </div>
        	  </div>
        	  <!--搜索-->
        </div>
          <div class="user-add-btn col-sm-3 nopadding-right">
            {{#ui/mix-button class="user-btn pull-right" iconClass="fa-plus"  text='新增药品'  clickAction="toDetailPage" toDetailPage="toDetailPage"}}
            {{/ui/mix-button}}
          </div>
      	</div>
        <table id="datatable1" cellpadding="0" cellspacing="0" border="0"  class="datatable table table-bordered table-hover dataTable" aria-describedby="datatable1_info">
          <thead>
            <tr role="row">
							<th rowspan="1" colspan="1" width="">药品名称</th>
              <th rowspan="1" colspan="1" width="">类别</th>
							<th rowspan="1" colspan="1" width="">剂型</th>
              <th rowspan="1" colspan="1" width="">制剂</th>
              <th rowspan="1" colspan="1" width="">生产厂家</th>
            </tr>
          </thead>
          {{#if drugList}}
          <tbody role="alert" aria-live="polite" aria-relevant="all" class="">
            {{#each drugList as |drug|}}
						<tr {{action "toDetailPage" drug on="click"}}>
							<td class="ellipsis">{{drug.name}}</td>
							<td class="ellipsis">{{drug.drugType.typename}}</td>
							<td class="ellipsis">{{drug.drugSpec.typename}}</td>
							<td class="ellipsis">{{drug.drugForm.name}}</td>
							<td class="ellipsis">{{drug.drugFactory}}</td>
						</tr>
            {{/each}}
          </tbody>
          {{else}}
          {{/if}}
        </table>
        {{#if drugList }}
            {{page-numbers content=drugList showFL=true numPagesToShow=5}}
            {{else}}
                <h1 class="col-sm-12 center unTask"></h1>
        {{/if}}
      </div>
    </div>
  </div>
  <!-- /BOX -->
</div>

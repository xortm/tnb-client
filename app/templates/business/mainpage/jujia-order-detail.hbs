<div class="col-sm-12">
  <div class="box margin-middle max-width ">
    <!-- BOX-BODY -->
    {{#if detailEdit}}
      <h3 class="col-sm-12 base-imformation">
        <p class="user-add-btn inline-block">
          {{#ui/mix-button class="user-btn edit-btn pull-right" iconClass="" text='立即派单' clickAction="showEmployeeModel" showEmployeeModel="showEmployeeModel" clickActParams=nursingplandetailModel}}
          {{/ui/mix-button}}
        </p>
      </h3>
    {{/if}}
    <div class="panel-body nopadding-vertical">
        <!-- 列表编辑-->
            <div class="row clear">
                <div class="col-xs-12 nopadding-horizontal">
                    <!-- //部门名称 -->
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">下单用户：</span>
                            <div class="input-group-content">{{nursingplandetail.customer.name}}</div>
                        </div>
                    </div>

                    <!-- //部门编号 -->
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">服务项目：</span>
                            <div class="input-group-content">{{nursingplandetail.item.item.name}}</div>
                        </div>
                    </div>
                    <!-- //上级部门 -->
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">服务时长：</span>
                            <div class="input-group-content">{{nursingplandetail.item.item.serviceTime}}</div>
                        </div>
                    </div>
                    <!-- 部门领导 -->
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">价&emsp;&emsp;格：</span>
                            <div class="input-group-content">{{nursingplandetail.item.item.price}}元</div>
                        </div>
                    </div>

                    <!-- 简称 -->
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">下单时间：</span>
                            <div class="input-group-content">{{nursingplandetail.createDateTimeStr}}分钟</div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">服务时间：</span>
                            <div class="input-group-content">{{nursingplandetail.serviceTimeStr}}</div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">接单人员：</span>
                            <div class="input-group-content">{{if nursingplandetail.serviceOperater.name nursingplandetail.serviceOperater.name "暂无"}}</div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">订单状态：</span>
                            <div class="input-group-content">{{nursingplandetail.serviceStatus.typename}}</div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">支付方式：</span>
                            <div class="input-group-content">{{nursingplandetail.paymentType.typename}}</div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6">
                        <div class="form-input-group">
                            <span class="input-group-addon">联系电话：</span>
                            <div class="input-group-content">{{nursingplandetail.serviceTel}}</div>
                        </div>
                    </div>

                    <!--  备注 -->
                    <div class="col-xs-12 col-sm-12 ">
                        <div class="form-input-group">
                            <span class="input-group-addon">地&emsp;&emsp;址：</span>
                            <div class="input-group-content">{{nursingplandetail.serviceAddress}}</div>
                        </div>
                    </div>
                </div>

            </div>

    </div>

</div>
</div>


{{#if showEmployeeModelFlag}}
    {{#bs-modal body=false footer=false header=false}}
        {{#bs-modal-header}}
            <h3 class="modal-title">请选择派单人员</h3>
        {{/bs-modal-header}}
        {{#bs-modal-body}}
          {{#bs-form formLayout=formLayout model=nursingplandetailModel invalid=(action "invalid")}}
            <div class="col-xs-12 col-sm-6 col-sm-offset-3"	>
              {{#bs-form-element class="inline-block col-xs-12" controlType="serviceOperater"  property="serviceOperater" }}
                {{#power-select class="input-group-content" placeholder="必填项" options=employeeList selected=defaultEmployee
                searchField="employeePinyin" noMatchesMessage="暂无员工"
                  allowClear=true onchange=(action "selectEmployee" ) as |employee|}}
                  {{employee.name}}
                {{/power-select}}
              {{/bs-form-element }}
            </div>
          {{/bs-form}}
        {{/bs-modal-body}}
        {{#bs-modal-footer class="user-add-btn"}}
          {{#ui/mix-button class="user-btn edit-btn" iconClass="fa fa-save"  text='确定' clickAction="chooseEmployee" chooseEmployee="chooseEmployee"}}
          {{/ui/mix-button}}
          {{#ui/mix-button class="user-btn times-btn" iconClass="fa fa-undo"  text='取消'  clickAction="invitation" invitation="invitation"}}
          {{/ui/mix-button}}
    		{{/bs-modal-footer}}
    {{/bs-modal}}
{{/if}}
